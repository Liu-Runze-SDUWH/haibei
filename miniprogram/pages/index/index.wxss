page {
  height: 100%;
  background-color: #fff;
}

.top {
  height: 40px;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-items: center;
  justify-content: center;
  background-color: white;
}

.top image {
  margin: 6px;
  margin-left: 10px;
  height: 28px;
  width: 28px;
}

.top text {
  font-size: 17px;
  padding: 9px;
  font-weight: bold;
}

.scroll {
  width: 100%;
  height: 160px;
  background-color: yellow;
}

.link {
  margin-bottom: 1px;
  width: 100%;
  padding: 10px;
  height: 48px;
  background-color: white;
}

.link text {
  font-size: 17px;
  font-weight: bold;
  margin-left: 10px;
}

.linkArea {

  background-color: white;
  width: 100%;
  padding: 20px;
}

.linkAreaRow {
  display: flex;
  width: 100%;
  flex-direction: row;
}

.linkBox {
  display: flex;
  width: 33%;
  flex-direction: column;
  align-items: center;
  padding-top: 15px;
  padding-bottom: 10px;
}

.linkBox image {
  height: 40px;
  width: 40px;
  background-color: white;
  margin-bottom: 10px;
}

.linkBoxPressed {
  display: flex;
  width: 33%;
  flex-direction: column;
  align-items: center;
  padding-top: 15px;
  padding-bottom: 10px;
  background-color: #aedfff;
}

.linkBoxPressed image {
  height: 40px;
  width: 40px;
  background-color: white;
}

